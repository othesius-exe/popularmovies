<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/review_author_text_view"
        android:text="@string/review_author_sample"
        style="@style/review_title_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/review_author_view_height" />

    <TextView
        android:id="@+id/review_content_text_view"
        android:text="@string/review_sample"
        style="@style/review_content_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>