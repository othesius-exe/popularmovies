<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/trailer_title_view"
        style="@style/trailer_title_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/trailer_title_height"
        android:text="@string/trailer_title"/>
    <ImageView
        android:id="@+id/trailer_image_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/trailer_image_height"
        android:paddingTop="@dimen/trailer_image_padding_top"
        android:paddingBottom="@dimen/trailer_image_padding_bottom"
        android:scaleType="fitCenter"
        android:src="@drawable/tmdb" />

</LinearLayout>