<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="detail_page_style">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="synopsis_style">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:maxLines">8</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="review_header_style">
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/review_author_text_size</item>
    </style>

    <style name="review_title_style">
        <item name="android:paddingLeft">@dimen/review_text_padding_start</item>
        <item name="android:paddingTop">@dimen/review_text_padding_top</item>
        <item name="android:layout_width">@dimen/review_author_view_height</item>
        <item name="android:textSize">@dimen/review_author_text_size</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="review_content_style">
        <item name="android:paddingLeft">@dimen/review_text_padding_start</item>
        <item name="android:paddingTop">@dimen/review_text_padding_top</item>
        <item name="android:paddingBottom">@dimen/review_text_padding_bottom</item>
        <item name="android:textSize">@dimen/review_content_text_size</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="trailer_title_style">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/review_author_text_size</item>
        <item name="android:paddingLeft">@dimen/review_text_padding_start</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>
</resources>
